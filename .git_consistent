subject:
  type: string
  required: true
  description: 'The subject contains succinct description of the change'
  rules:
    firstLatter: upper
    dotAtEnd: false
    nonAscii: false
body:
  type: text
  required: false
  default: ''
  description: 'The body contains details of the change'
  rules:
    firstLatter: upper
    dotAtEnd: true
    nonAscii: false
